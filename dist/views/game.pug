html(lang="ko")
    include base.pug
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&display=swap" rel="stylesheet")
        title 스바스(Step by Step)
        link(rel="stylesheet" href="styles/game.css")
        link(rel="icon" href="img/items/trace_of_the_void.png")
    body
        mixin Dialog(id, title, w, h)
            div.dialog(id=id style=`width:${w}px; height:${h}px;`)
                div.dialog-head
                    span= title
                    div.dialog-close
                        i.fas.fa-times
                div.dialog-body
                    block
        mixin Stage(id, label, w, h, x, y)
            div.stage(id=id style=`width:${w}px; height:${h}px; left:${x}px; top:${y}px; background-image: url(img/stages/${id}.png);`)
                div.stageLabel= label
                block
        mixin Boss(id, label, x, y, imgSrc)
            div.boss(id=id style=`width:50px; height:50px; left:${x}px; top:${y}px; background-image: url(img/boss/${id}/${id}-0.png);`)
                div.bossLabel= label
                block
        div#hpbar
            div#hpbarName Entity_Boss
            div#hpbarBg
            div#hpbarDmg
            div#hpbarHeal
            div#hpbarGage(style="width:800px; height:35px;")
        div#map
            div#mapLabel= "세계: 우주"
            +Stage('earth', '지구', 300, 300, 10, 50)
            +Boss('shepherd', '셰퍼드', 200, 280)

            +Stage('immune', '면역의 땅', 300, 300, 150, 350)
            +Boss('...', '???', 300, 500)

            +Stage('eternal_prison', '영원한 감옥', 300, 300, 600, 250)
            +Boss('...', '???', 700, 250)

            +Stage('harbinger_of_end', '종말의 전조', 500, 600, 1000, 50)
            +Boss('...', '???', 1200, 450)

            +Stage('arkcube_piece', '???', 250, 250, 400, 800)
            +Stage('loard_down_benzene', '???', 1000, 1000, 1800, 50)
        img#background
        div#bossFightTransition
            div#bossSplash-diagonalTop
            img#bossImage
            div#bossName
            div#bossSplash-diagonalBot
        div#sceneTransition

        canvas#damage-text.renderer
        canvas#my-effect.renderer
        canvas#enemy-effect.renderer
        canvas#objects.renderer
        canvas#stage.renderer


        canvas#spaceBackgroundLayer1.renderer
        canvas#spaceBackgroundLayer2.renderer

        img#stageBackImage

        div#skill
            - for(let i=0; i<20; i++)
                div.skillBox

        div#fightAlert 전투에 돌입합니다.

        div#itemTooltip
            div#itemTooltip-top
                div#itemTooltip-nameGroup
                    div#itemTooltip-name 테스트
                    div#itemTooltip-rare 노말
                div#itemTooltip-levelGroup
                    div#itemTooltip-level Lv.0
                    div#itemTooltip-reqLV reqLv.0
                    div#itemTooltip-star ★☆☆☆☆☆☆
            div#itemTooltip-mid
                img#itemTooltip-img
            div#itemTooltip-statBox
            div#itemTooltip-bottom
                div#itemTooltip-description 이예에
        div#profile
            div#profile-name GUEST
            div#profile-level Lv.1
            div#profile-hpbar
                div#profile-hpbarBg
                div#profile-hpbarGage
        div#normalTextTooltip
        +Dialog("Inventory", "인벤토리", 610, 340)
            div#inventory-box
            div#inventory-bottom-menu
                div#upgradeButton.inventoryMenu
                    i.fas.fa-hammer
        +Dialog("Stat", "스탯", 300, 500)
            div#statBox
        +Dialog("Alert", "알림", 300, 100)
            div#alert-box
        +Dialog("Confirm", "확인", 300, 150)
            div#confirm-box
            div#confirm-buttons
                div#confirm-ok.confirmButton 확인
                div#confirm-no.confirmButton 취소
        +Dialog("UpgradeConfirm", "장비 강화", 300, 600)
            div#upgrade-confirm-box
                div#upgrade-headBox
                    img#upgrade-itemImg
                    div#upgrade-itemName
                div#upgrade-description
                div#upgrade-info
                    div.upgrade-infoBar
                        div.upgrade-infoHead 비용
                        div.upgrade-infoValue#upgrade-gold
                    div.upgrade-infoBar
                        div.upgrade-infoHead 강화 레벨
                        div.upgrade-infoValue#upgrade-lv
                    div.upgrade-infoBar
                        div.upgrade-infoHead 성공 확률
                        div.upgrade-infoValue#upgrade-chance
                div#upgrade-stat-info
            div#upgrade-confirm-buttons
                div#upgrade-confirm-ok.confirmButton 확인
                div#upgrade-confirm-no.confirmButton 취소
    
    script(src="pages/game.js")

    







